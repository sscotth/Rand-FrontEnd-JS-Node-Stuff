extends ../template/layout

block content
  .row
    .small-12.columns
  .row
    .small-4.columns
      .song
        a(href='/songs/#{song.id}')
          img(src=song.art)
        h6.subheader= song.title
    .small-8.columns
      .song-metadata
        audio(src='/audios/#{song.filename}', controls=true)
        p= song.lyrics
        .delete
          form(action='/songs/#{song.id}', method='post')
            input(type='hidden', name='_method', value='delete')
            button.tiny.radius.alert(type='submit') Delete Song
