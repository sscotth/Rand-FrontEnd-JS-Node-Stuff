extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Color Page
  .row
    .small-2.columns
      a.button.tiny.radius.expand(href='/') Home
    .small-10.columns
  .row
    - var width = (100 / colors.length);
    table#colors
      thead: tr
        each color in colors
          th= color
      tbody: tr
        each color in colors
          td.color(style='background-color:#{color};width:#{width}%;')
