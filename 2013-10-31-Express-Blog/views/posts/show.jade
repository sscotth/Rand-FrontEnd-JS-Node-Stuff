extends ../template/layout

block content
  .row
    .small-12.columns
      h1.subheader= post.title
  .row
    .small-2.columns
      a.button.expand.tiny.radius(href='/') Home
    .small-2.columns
      a.button.expand.tiny.radius(href='/posts') Posts
    .small-2.columns
      a.button.expand.tiny.radius.success(href='/posts/new') New
    .small-6.columns
  .row
    .small-12.columns
      .post
        table
          thead
            tr
              th Title
              th Author
              th Date
              th Tags
          tbody
            tr
              td: a.button.tiny.radius.expand(href='/posts/#{post.id}')= post.title
              td= post.author
              td= post.date
              td= post.tags
        img(src=post.image)
        p.content= post.content
